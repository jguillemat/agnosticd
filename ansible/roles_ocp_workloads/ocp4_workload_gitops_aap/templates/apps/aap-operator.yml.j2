---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: ansible-automation-platform
  namespace: openshift-gitops
spec:
  destination:
    namespace: ansible-automation-platform
    server: https://kubernetes.default.svc
  project: default
  source:
    directory:
      recurse: false
    path: operator/base/
    repoURL: {{ ocp4_workload_gitops_aap_repo }}
    targetRevision: main
  syncPolicy:
    automated:
      prune: true
      selfHeal: true