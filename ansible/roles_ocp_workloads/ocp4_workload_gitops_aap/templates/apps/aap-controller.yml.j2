---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: aap-controller
  namespace: openshift-gitops
spec:
  destination:
    namespace: ansible-automation-platform
    server: https://kubernetes.default.svc
  project: default
  source:
    directory:
      recurse: false
    path: controller/base
    repoURL: {{ ocp4_workload_gitops_aap_repo }}
    targetRevision: main
  syncPolicy:
    automated:
      prune: true
      selfHeal: true